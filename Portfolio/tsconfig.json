{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "node", // Change moduleResolution to "node"
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Path mapping configuration */
    "baseUrl": "./src", // Set baseUrl to the root of your source directory
    "paths": {
      "*": ["*", "src/*"] // Set up paths for module resolution
    }
  },
  "include": ["src/**/*"], // Update the include pattern to include all files in the src directory
  "references": [{ "path": "./tsconfig.node.json" }]
}
